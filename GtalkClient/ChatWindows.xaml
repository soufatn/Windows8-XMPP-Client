<Window x:Class="GtalkClient.ChatWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWindows" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="datagrid1" Grid.Column="0" AutoGenerateColumns="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Song" Width="*" Binding="{Binding value.From}" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
        </Grid>
        <Button Grid.Column="1" Content="Refresh"  />
    </Grid>
</Window>
