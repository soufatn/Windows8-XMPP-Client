<Window x:Class="GtalkClient.ChatWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWindows" Height="400" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="371" VerticalAlignment="Top" Width="200">
            <ListView HorizontalAlignment="Left" Height="371" VerticalAlignment="Top" ItemsSource="{DynamicResource Contacts}" Width="200">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name"
                        DisplayMemberBinding="{Binding Key}" />
                    </GridView>
                </ListView.View>
            </ListView>
            
        </Grid>
        <Grid>
            <Button Content="Refresh" Click="Refresh" Margin="203,0,0.333,-0.333"/>
        </Grid>
        
    </Grid>
</Window>
