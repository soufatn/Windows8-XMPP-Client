<Window x:Class="GtalkClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Style="{DynamicResource ResourceKey=MainWindowStyle}">
    <Grid>
        <StackPanel Width="400" HorizontalAlignment="Center">
            <Label Content="Connection" HorizontalContentAlignment="Center"/>
            <Label Content="E-mail" HorizontalAlignment="Left"/>
            <TextBox  x:Name="email" HorizontalContentAlignment="Center" />
            <Label Content="Password" HorizontalAlignment="Left" />
            <PasswordBox x:Name="password" HorizontalContentAlignment="Center" />
            <Button Click="Connect" Content="Connection" Width="100" HorizontalAlignment="Center"/>
            <TextBlock x:Name="consoleGtalk" TextWrapping="WrapWithOverflow"  Text="TextBlock"/>
        </StackPanel>
        
    </Grid>
</Window>
